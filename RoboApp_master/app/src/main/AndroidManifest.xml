<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robocat.roboappui"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:name="android.hardware.usb.host" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        <activity
            android:name=".MultiTouchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_multi_touch"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name=".StartActivity" >
        </activity>
        <activity
            android:name=".AudioChooser"
            android:label="@string/title_activity_audio_chooser" >
        </activity>
        <activity
            android:name=".LoadFileChooser"
            android:label="@string/title_activity_load_file_chooser" >
        </activity>
        <activity
            android:name=".SaveFileChooser"
            android:label="@string/title_activity_save_file_chooser" >
        </activity>
        <activity
            android:name=".FileChooser"
            android:label="@string/title_activity_file_chooser" >
        </activity>
        <activity
            android:name=".RoboCatActivity"
            android:label="@string/title_robo_cat_activity" >
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >

            <!-- configure this activity to use landscape orientation -->

        </activity>
        <activity
            android:name=".FaceDetectActivity"
            android:label="@string/title_activity_face_detect"
            android:screenOrientation="landscape"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
    </application>

</manifest>
